<div class="container my-4">

	<% if notice %>
	<div class="alert alert-success alert-dismissible fade show">
		<button type="button" class="close" data-dismiss="alert">&times;</button>
		<p id="notice"><%= notice %></p>
	</div>
	<% end %>

	<div class="jumbotron bg-light py-4">
		<div class="row">
			<figure class="figure">
				<%= image_tag @trip_file.doc.url, class: "figure-img img-fluid rounded", width: "40%" %>
				<figcaption class="figure-caption" style="font-size: 18px;">Flight : <%= "#{@trip_file.flight} #{@trip_file.flight_number}"  %></figcaption>
			</figure>
		</div>
		<div class="row">
			<%= link_to 'Create New', new_trip_file_path, class: 'awb-button btn btn-success' %>
		</div>
	</div>
</div>

<div class="container">


  <p id="notice"><%= notice %></p>

  <h1 class="red-heading" align="center">Record Table</h1>

  <div class="row">
    <div class="col-12">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>Airway Bill</th>
            <th colspan="5">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @records.each do |record| %>
            <tr>
              <td><%= record.awbnum %></td>
              <td><%= link_to 'Show', record %></td>
              <td><%= link_to 'Edit', edit_record_path(record) %></td>
              <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <td><%= link_to 'Download', record.file, download: '' %></td>
              <td><%= link_to 'View', record.file, target: '_blank' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'New Record', new_record_path, class: 'submit', style: 'text-decoration: none;' %>
    </div>
  </div>

</div>

<div class="container my-4">

	<% if notice %>
	<div class="alert alert-success alert-dismissible fade show">
		<button type="button" class="close" data-dismiss="alert">&times;</button>
		<p id="notice"><%= notice %></p>
	</div>
	<% end %>

	<div class="jumbotron bg-light py-4">
		<div class="row">
			<figure class="figure">
				<%#= image_tag @record.doc.url, class: "figure-img img-fluid rounded", width: "80%" %>
				<figcaption class="figure-caption" style="font-size: 18px;">AWB Number : <%= @record.awbnum %></figcaption>
			</figure>
		</div>
		<div class="row">
			<%= link_to 'Create New', new_record_path, class: 'awb-button btn btn-success' %>
		</div>
	</div>
</div>